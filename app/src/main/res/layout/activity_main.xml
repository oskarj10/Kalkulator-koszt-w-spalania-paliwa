<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#E2E4D0"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Koszty spalania paliwa"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="368dp"
        android:layout_height="26dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="30dp"
        android:text="Dystans w kilometrach:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/number1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:backgroundTint="#009688"
        android:foregroundTint="#673AB7"
        android:hint="Wpisz liczbę"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textColorHighlight="#EA0909"
        android:textColorHint="#9E9797"
        android:textColorLink="#000102"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="20dp"
        android:text="Średnie spalanie na 100 km:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/number2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:hint="Wpisz liczbę"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="20dp"
        android:text="Cena paliwa za litr:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/number3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:hint="Wpisz liczbę"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_gravity="center|left"
        android:layout_marginTop="20dp"
        android:text="Liczba osób:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/number4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:hint="Wpisz liczbę"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:background="#4CAF50"
        android:backgroundTint="#4CAF50"
        android:text="Oblicz"
        android:textColor="#F1F6F2"
        android:textColorHighlight="#A11616"
        android:textColorHint="#AE2525"
        android:textColorLink="#630E0E"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


    </LinearLayout>

</LinearLayout>